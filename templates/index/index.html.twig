{% extends 'base.html.twig' %}

{% block main_container %}
    <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">
          My Bookmarks
        </h6>
        {% include 'commons/_messages.html.twig' %}
        {% for bookmark in bookmarks %}
            <div class="media text-muted pt-3">
              <svg width="32" height="32" class="mr-2 rounded">
                <rect width="32" height="32" style="fill:{{ bookmark.category.color }};" />
              </svg>
              <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <div class="d-flex justify-content-between align-items-center w-100">
                  <div>
                    <a href="{{ bookmark.url }}" target="_blank">
                      <strong class="text-gray-dark">
                          <i class="oi oi-bookmark"></i> {{ bookmark.name }} {{ bookmark.favorite ? '<i class="oi oi-star"></i>' : '' }}
                      </strong>
                    </a>
                    <span class="d-block">{{ bookmark.category }}</span>
                    <span class="d-block">
                        <small>
                            {{ bookmark.createdAt|time }}
                        </small>
                    </span>
                  </div>
                  <div class="d-flex">
                      <a
                          href="#"
                          class="favorite btn btn-sm {{ bookmark.favorite ? 'btn-success' : 'btn-outline-success' }}"
                          data-url="{{ path('app_edit_favorite', {bookmark: bookmark.id}) }}"
                      >
                          <span class="oi oi-star" title="{{ bookmark.favorite ? 'Remove bookmark from favorites' : 'Add Bookmark to Favorites' }}" aria-hidden="true"></span>
                      </a>&nbsp;&nbsp;&nbsp;
                      <a href="{{ path('app_bookmark_edit', { 'id': bookmark.id }) }}" class="btn btn-sm btn-outline-info">
                          <span class="oi oi-pencil" title="Edit Bookmark" aria-hidden="true"></span>
                      </a>&nbsp;&nbsp;&nbsp;
                      <form method="post" action="{{ path('app_bookmark_delete', { 'id': bookmark.id }) }}">
                          <input type="hidden" name="_method" value="DELETE" />
                          <input type="hidden" name="_token" value="{{ csrf_token(bookmark.id) }}">
                          <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Bookmark">
                              <i class="oi oi-trash" aria-hidden="true"></i>
                          </button>
                      </form>
                  </div>
                </div>
              </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <div class="btn btn-outline-info"><i class="oi oi-info"></i></div>
                <strong class="text-gray-dark">There are no bookmarks yet !</strong>
            </div>
        {% endfor %}
        <div class="mt-3 mb-3">
            {{ include('commons/_pagination.html.twig', {
                'items_per_page': items_per_page is defined ? items_per_page : 1,
                'total_items': total_items is defined ? total_items : 1,
                'page': page is defined ? page : 1,
                'categoryName': categoryName is defined ? categoryName : ''
            }) }}
        </div>
  </div>
{% endblock %}


{% extends 'base.html.twig' %}

{% block main_container %}
    <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">
          My Bookmarks
        </h6>
        {% for bookmark in bookmarks %}
            <div class="media text-muted pt-3">
              <svg width="32" height="32" class="mr-2 rounded">
                <rect width="32" height="32" style="fill:{{ bookmark.category.color }};" />
              </svg>
              <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <div class="d-flex justify-content-between align-items-center w-100">
                  <div>
                    <a href="{{ bookmark.url }}" target="_blank">
                      <strong class="text-gray-dark">
                          <i class="oi oi-bookmark"></i> {{ bookmark.name }}
                      </strong>
                    </a>
                    <span class="d-block">{{ bookmark.category }}</span>
                  </div>
                  <div class="d-flex">
                      <a href="{{ path('app_bookmark_edit', { 'id': bookmark.id }) }}" class="btn btn-sm btn-outline-info">
                          <span class="oi oi-pencil" title="Edit Bookmark" aria-hidden="true"></span>
                      </a>&nbsp;&nbsp;&nbsp;
                      <form method="post" action="{{ path('app_bookmark_delete', { 'id': bookmark.id }) }}">
                          <input type="hidden" name="_method" value="DELETE" />
                          <input type="hidden" name="_token" value="{{ csrf_token(bookmark.id) }}">
                          <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete Bookmark">
                              <i class="oi oi-trash" aria-hidden="true"></i>
                          </button>
                      </form>
                  </div>
                </div>
              </div>
            </div>
        {% else %}
            <div class="alert alert-info">
                <i class="oi oi-info"></i>
                <strong class="text-gray-dark">There are no bookmarks yet !</strong>
            </div>
        {% endfor %}
  </div>
{% endblock %}


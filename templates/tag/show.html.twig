{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block main_container %}
    <h1>Tag</h1>
    {% include 'commons/_messages.html.twig' %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tag.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tag.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary" href="{{ path('app_tag_index') }}">
        <i class="oi oi-chevron-left"></i> back to list
    </a>

    <a class="btn btn-outline-primary" href="{{ path('app_tag_edit', {'id': tag.id}) }}">
        <i class="oi oi-pencil"></i> edit
    </a>
    <hr />

    {{ include('tag/_delete_form.html.twig') }}
{% endblock %}

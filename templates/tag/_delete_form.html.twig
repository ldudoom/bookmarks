<form method="post" action="{{ path('app_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Are you sure you want to delete this tag?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
    <button class="btn btn-outline-danger">
        <i class="oi oi-trash"></i> Delete
    </button>
</form>

{% extends 'base.html.twig' %}

{% block title %}Tag index{% endblock %}

{% block main_container %}
    <h1>Tag index</h1>
    {% include 'commons/_messages.html.twig' %}
    <table class="table table-bordered table-hover shadow">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td>{{ tag.name }}</td>
                <td>
                    <a class="btn btn-sm btn-outline-info" href="{{ path('app_tag_show', {'id': tag.id}) }}">
                        <i class="oi oi-magnifying-glass"></i> show
                    </a>
                    <a class="btn btn-sm btn-outline-primary" href="{{ path('app_tag_edit', {'id': tag.id}) }}">
                        <i class="oi oi-pencil"></i> edit
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-success" href="{{ path('app_tag_new') }}">
        <i class="oi oi-plus"></i> Create new
    </a>
{% endblock %}

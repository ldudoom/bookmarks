{% extends 'base.html.twig' %}

{% block main_container %}
    <form class="form" method="POST" action="{{ path('app_category_store') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('category') }}">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="" name="name" id="name" placeholder="Category name">
        </div>
        <button type="submit" class="btn btn-outline-primary">
            <i class="fa fa-trash"></i> Save Category
        </button>
    </form>
{% endblock %}


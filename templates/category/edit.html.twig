{% extends 'base.html.twig' %}

{% block main_container %}
    <form class="form" method="POST" action="{{ path('app_category_store', {'category': category.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('category') }}">
        <input type="hidden" name="method" value="PATCH">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{ category.name }}" name="name" id="name" placeholder="Category name">
        </div>
        <button type="submit" class="btn btn-outline-primary">
            <i class="fa fa-trash"></i> Update Category
        </button>
    </form>
{% endblock %}


{% extends 'base.html.twig' %}

{% block main_container %}
    {% include 'commons/_messages.html.twig' %}
    <div class="my-3 p-3 bg-white rounded box-shadow">
        <h6 class="border-bottom border-gray pb-2 mb-0">
            Categories
        </h6>

        {% for category in categories %}
        <div class="media text-muted pt-3">
            <svg width="32" height="32" class="mr-2 rounded">
                <rect width="32" height="32" style="fill:{{category.color}};" />
            </svg>
            <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <div>
                        <a href="{{ path('app_category_show', { 'category': category.id }) }}" target="_blank">
                            <strong class="text-gray-dark">{{ category.name }}</strong>
                        </a>
                    </div>
                    <div>
                        <strong class="text-gray-dark">{{ category.color }}</strong>
                    </div>
                    <div class="d-flex">
                        <a href="{{ path('app_category_edit', { 'category': category.id }) }}" class="btn btn-link mg-3">
                            <span class="oi oi-pencil" title="Edit Category" aria-hidden="true"></span>
                        </a>
                        <form method="post" action="{{ path('app_category_destroy', { 'category': category.id }) }}">
                            <input type="hidden" name="_method" value="DELETE" />
                            <input type="hidden" name="_token" value="{{ csrf_token(category.id) }}">
                            <button type="submit" class="btn btn-link mg-3" title="Delete Category">
                                <i class="oi oi-delete" aria-hidden="true"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div>
                <strong class="text-gray-dark">There are no categories</strong>
            </div>
        {% endfor %}

    </div>
{% endblock %}

